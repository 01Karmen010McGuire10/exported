{
  "compilerOptions": {
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "build",
    "noEmitHelpers": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["*.ts", "../**/*.d.ts"],
  "exclude": [
    "node_modules",
	"dist",
	"app"
  ]
}
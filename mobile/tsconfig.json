{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015.iterable",
      "es2015.promise"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "build",
    "noEmitHelpers": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["*.ts", "../**/*.d.ts"],
  "exclude": [
    "node_modules"
  ]
}